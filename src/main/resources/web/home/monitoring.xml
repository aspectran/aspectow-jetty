<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran 8.0//EN"
        "https://aspectran.com/dtd/aspectran-8.dtd">
<aspectran>

    <bean class="com.aspectran.aspectow.appmon.manager.AppMonConfigResolver">
        <properties>
            <item name="configLocation">classpath:com/aspectran/aspectow/appmon/config/appmon-config.apon</item>
        </properties>
    </bean>

    <translet name="/monitoring/">
        <redirect path="/appmon/front/#{class:com.aspectran.utils.security.TimeLimitedPBTokenIssuer^token}"/>
    </translet>

</aspectran>
