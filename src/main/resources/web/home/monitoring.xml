<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran 8.0//EN"
        "https://aspectran.com/dtd/aspectran-8.dtd">
<aspectran>

    <bean class="com.aspectran.appmon.config.BackendConfigResolver">
        <properties>
            <item name="configLocation">/config/appmon/backend-config.apon</item>
        </properties>
    </bean>

    <translet name="/monitoring/${instances}">
        <redirect path="/appmon/front/#{class:com.aspectran.utils.security.TimeLimitedPBTokenIssuer^token}/${instances}"/>
    </translet>

</aspectran>
